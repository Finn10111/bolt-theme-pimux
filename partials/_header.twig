<!-- Header -->
<header>
    <div class="container" id="maincontent" tabindex="-1">
        <div class="row">
            <div class="col-lg-12">
                <div class="btn-circle-header"><span class="sr-only">pimux.de</span></div><br><br>
                <div class="intro-text">
                    <h1 class="name">{{ app.config.get('general/sitename') }}</h1>
                    <hr class="star-light">
                    {% if app.config.get('general/payoff') %}
                        <span class="skills">{{ app.config.get('general/payoff') }}</span>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</header>
